<!DOCTYPE html>
<html lang="en-GB">

<head>
    <!-- Primary Meta Tags -->
    <title>Ressie</title>
    <meta name="title" content="Ressie">
    <meta name="description"
        content="Archive your playback of Spotify and Plex - https://github.com/joshua-noakes1/ressie">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#303030">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://github.com/joshua-noakes1/ressie">
    <meta property="og:title" content="Ressie">
    <meta property="og:description"
        content="Archive your playback of Spotify and Plex - https://github.com/joshua-noakes1/ressie">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://github.com/joshua-noakes1/ressie">
    <meta property="twitter:title" content="Ressie">
    <meta property="twitter:description"
        content="Archive your playback of Spotify and Plex - https://github.com/joshua-noakes1/ressie">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="https://bootswatch.com/5/darkly/bootstrap.min.css">
    <style>
        .image-container {
            margin-top: 1rem;
        }
    </style>

    <!-- Javascript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>
    <script defer src="static/js/refresh.js"></script>
</head>

<body>
    <!-- Navbar content -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a id="title" class="navbar-brand">Ressie</a>
            <a href="https://github.com/joshua-noakes1/ressie" target="_blank">
                <button id="github-btn" class="btn btn-secondary my-2 my-sm-0">Github</button></a>
        </div>
    </nav>

    <!-- Body content -->
    <div class="container text-center">
        <% const imagesReversed = images.reverse(); %>
        <% if (imagesReversed.length > 0) { %>
        <% imagesReversed.forEach((image) => { %>
        <!-- image-<%= image.id %>.png -->
        <div class="image-container shadow-lg p-3 mb-5 bg-body rounded">
            <h3 id="image-name" class="card-header rounded"><%= image.name %></h3>
            <div id="image-tagline" class="card-body">
                <h5 class="card-title"><%= image.tagline%></h5>
            </div>
            <img id="image-image" src="/static/cache/<%= image.imageName %>" class="rounded" width="85%" height="85%"
                focusable="false" style="display:block;margin:auto;"></img>
            <div id="image-overview" class="card-body">
                <% if (image.mediaType == 'episode') { %>
                <p id="image-overview" class="card-text"><%= image.overview %></p>
                <% } %>
                <div class="image-btns">
                    <% if (image.tmdb) { %>
                        <a href="<%= image.tmdb.tmdbURL %>" target="_blank"><button id="view-on-tmdb"
                                class="btn btn-primary">View on TMDB</button></a>
                    <% } %>
                    <a href="<%= image.plexURL %>" target="_blank"><button class="btn btn-warning">View on
                            Plex</button></a>
                </div>
            </div>
        </div>
        <!-- image finished -->
        <% }); %>
        <% } %>
    </div>
</body>

</html>